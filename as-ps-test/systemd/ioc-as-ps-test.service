[Unit]
Description=Soft IOC for simulation of all magnet power supplies
Conflicts=ioc-as-vaca.service
After=multi-user.target

[Service]
Group=fac
User=fac
Type=simple
WorkingDirectory=/home/fac/sirius-iocs
StandardOutput=syslog
StandardError=syslog
ExecStartPre=/bin/bash --login -c 'env > /tmp/bashrc-sirius-ioc-as-ps-test'
EnvironmentFile=-/tmp/bashrc-sirius-ioc-as-ps-test
ExecStart=/usr/local/bin/sirius-ioc-as-ps-test.py
