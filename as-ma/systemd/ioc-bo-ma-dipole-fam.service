[Unit]
Description=Soft IOC for BO dipole magnet family
Requires=ioc-as-ps-test.service
After=multi-user.target

[Service]
Group=fac
User=fac
Type=simple
WorkingDirectory=/home/fac/sirius-iocs
StandardOutput=syslog
StandardError=syslog
ExecStartPre=/bin/bash --login -c 'env > /tmp/bashrc-sirius-ioc-bo-ma-dipole-fam'
EnvironmentFile=-/tmp/bashrc-sirius-ioc-bo-ma-dipole-fam
ExecStart=/usr/local/bin/sirius-ioc-bo-ma-dipole-fam.py
