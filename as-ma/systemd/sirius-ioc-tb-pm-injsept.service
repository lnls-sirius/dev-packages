[Unit]
Description=Soft IOC for TB injection septum
After=multi-user.target

[Service]
Group=sirius
User=sirius
Type=simple
WorkingDirectory=/home/sirius/iocs
StandardOutput=syslog
StandardError=syslog
ExecStartPre=/bin/bash --login -c 'env > /tmp/bashrc-sirius-ioc-tb-pm-injsept'
EnvironmentFile=-/tmp/bashrc-sirius-ioc-tb-pm-injsept
ExecStart=/usr/local/bin/sirius-ioc-as-ma.py \
TB-04:PM-InjSept
