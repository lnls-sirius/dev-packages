[Unit]
Description=Soft IOC for Magnets
After=multi-user.target

[Service]
Group=fac
User=fac
Type=simple
WorkingDirectory=/home/fac/sirius-iocs
StandardOutput=syslog
StandardError=syslog
ExecStartPre=/bin/bash --login -c 'env > /tmp/bashrc-sirius-ioc-ma-%I'
EnvironmentFile=-/tmp/bashrc-sirius-ioc-ma-%I
ExecStart=/usr/local/bin/sirius-ioc-ma.py %I
