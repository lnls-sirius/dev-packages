[Unit]
Description=Soft IOC for pulsed magnets
Requires=ioc-si-ma-dipole-fam.service ioc-ts-ma-dipole-fam.service ioc-bo-ma-dipole-fam.service ioc-tb-ma-dipole-fam.service
After=multi-user.target

[Service]
Group=fac
User=fac
Type=simple
WorkingDirectory=/home/fac/sirius-iocs
StandardOutput=syslog
StandardError=syslog
ExecStartPre=/bin/bash --login -c 'env > /tmp/bashrc-sirius-ioc-as-pm'
EnvironmentFile=-/tmp/bashrc-sirius-ioc-as-pm
ExecStart=/usr/local/bin/sirius-ioc-as-pm.py
