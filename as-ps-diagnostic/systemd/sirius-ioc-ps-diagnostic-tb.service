[Unit]
Description=TB Power Supply Diagnostics IOC
After=multi-user.target

[Service]
Group=sirius
User=sirius
Type=simple
WorkingDirectory=/home/sirius/iocs
StandardOutput=syslog
StandardError=syslog
ExecStartPre=/bin/bash --login -c 'env > /tmp/bashrc-sirius-ioc-ps-diagnostic'
EnvironmentFile=-/tmp/bashrc-sirius-ioc-ps-diagnostic
ExecStart=/usr/local/bin/sirius-ioc-as-ps-diagnostic.py TB ".*" ".*"
